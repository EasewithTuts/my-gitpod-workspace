---
import "../styles/global.css"
import Nav from "../components/Nav.astro"
import Footer from "../components/Footer.astro"
const {frontmatter} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:type" content="article" />
    <meta property="og:title" content={frontmatter.title} />
    <meta property="og:description" content={frontmatter.description} />
    <meta property="og:image" content="https://easewithtuts.netlify.app/images/placeholder-hero.png" />
    <meta property="twitter:title" content={frontmatter.title} />
    <meta property="twitter:description" content={frontmatter.description} />
    <meta property="twitter:image" content="https://easewithtuts.netlify.app/images/placeholder-hero.png" />

    <title>{ frontmatter.title }</title>
    
</head>
<body>
    <style>

        .box {
            display : flex;
            justify-content : start;
            margin-left: 5rem;
            flex-direction : column;
        }
        .box-details {
            display : flex;
            flex-direction : column;
            align-items : start;
            margin-left: 5rem;
            margin-bottom : 1rem;
        }

        @media only screen and (max-width :600px) {
           .box {
                margin-left : .5rem;
            }
           .box-details {
                margin-left : .5rem;
            }

            .center img {
                width : 75%;
                height : 75%;
            }
        }

        html {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .center {
            display : flex;
            justify-content: center;
        }
    </style>
    <Nav siteName="EasewithTuts"/>
    <div class='center'>
        <img src={frontmatter.heroImage} alt="Hero Image"/>
    </div>
    <div class="box-details">
        <h1>{frontmatter.title}</h1>
        <span>{frontmatter.author} Â· Posted on {frontmatter.date}</span>

    </div>
    <div class="box">
        <slot />
        <Footer />
    </div>
    
</body>
</html>


