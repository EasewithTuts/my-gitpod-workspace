---
import "../styles/global.css"
import Nav from "../components/Nav.astro"
import Footer from "../components/Footer.astro"
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{ title }</title>
    <meta property="og:type" content="website" />
    <meta property="og:title" content="EasewithTuts Blog" />
    <meta property="og:description" content={title} />
    <meta property="og:image" content="https://easewithtuts.netlify.app/images/placeholder-hero.png" />
    <meta property="og:type" content="website" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content="Learn to code with Ease." />
    <meta property="twitter:image" content="https://easewithtuts.netlify.app/images/placeholder-hero.png" />
</head>
<body>
    <style>
        html {
            padding : 0;
            margin : 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-align : center;
        }
    </style>
    <Nav siteName="EasewithTuts"/>
    <slot />
<div>
    <Footer />
</div>
</body>
</html>
