---
import Nav from "../components/Nav.astro"
import Footer from "../components/Footer.astro"
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{ title }</title>
    <script src={import.meta.env.KIT} crossorigin="anonymous"></script>
    
</head>
<body>
    <style>
        html {
            padding : 0;
            margin : 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-align : center;
        }
    </style>
    <Nav siteName="EasewithTuts"/>
    <slot />
<Footer />
</body>
</html>
