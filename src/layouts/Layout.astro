---
import Nav from "../components/Nav.astro"
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{ title }</title>
    <script src="https://kit.fontawesome.com/e677c14d11.js" crossorigin="anonymous"></script>
